<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="480px"
        android:layout_height="640px"
        android:layout_alignParentRight="true" />

    <SurfaceView
        android:id="@+id/surface_view_o"
        android:layout_width="48px"
        android:layout_height="64px"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/surface_view"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_take_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拍照" />

        <Button
            android:id="@+id/bt_open_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开摄像头" />

        <Button
            android:id="@+id/bt_record_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始视频" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pic1"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/iv_pic2"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/iv_pic3"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout_1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pic4"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <ImageView
            android:id="@+id/iv_pic5"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <ImageView
            android:id="@+id/iv_pic6"
            android:layout_width="150dp"
            android:layout_height="150dp" />

    </LinearLayout>


</RelativeLayout>