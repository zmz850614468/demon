<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_box_gray"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dialog_air_width_1_3"
                android:layout_height="@dimen/dialog_air_height"
                android:background="@color/white"
                android:gravity="center"
                android:text="温度"
                android:textColor="@color/app_content_color"
                android:textSize="@dimen/app_content_size" />

            <TextView
                android:layout_width="@dimen/dialog_air_width_1_3"
                android:layout_height="@dimen/dialog_air_height"
                android:layout_marginLeft="@dimen/dialog_air_margin_left"
                android:background="@color/white"
                android:gravity="center"
                android:text="模式"
                android:textColor="@color/app_content_color"
                android:textSize="@dimen/app_content_size" />

            <TextView
                android:layout_width="@dimen/dialog_air_width_1_3"
                android:layout_height="@dimen/dialog_air_height"
                android:layout_marginLeft="@dimen/dialog_air_margin_left"
                android:background="@color/white"
                android:gravity="center"
                android:text="风速"
                android:textColor="@color/app_content_color"
                android:textSize="@dimen/app_content_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <org.angmarch.views.NiceSpinner
                android:id="@+id/ns_temperature"
                android:layout_width="@dimen/dialog_air_width_1_3"
                android:layout_height="@dimen/dialog_air_height"
                android:background="@drawable/shape_box_white"
                android:textSize="@dimen/app_content_size" />

            <org.angmarch.views.NiceSpinner
                android:id="@+id/ns_mode"
                android:layout_width="@dimen/dialog_air_width_1_3"
                android:layout_height="@dimen/dialog_air_height"
                android:layout_marginLeft="@dimen/dialog_air_margin_left"
                android:background="@drawable/shape_box_white"
                android:textSize="@dimen/app_content_size" />

            <org.angmarch.views.NiceSpinner
                android:id="@+id/ns_wind_speed"
                android:layout_width="@dimen/dialog_air_width_1_3"
                android:layout_height="@dimen/dialog_air_height"
                android:layout_marginLeft="@dimen/dialog_air_margin_left"
                android:background="@drawable/shape_box_white"
                android:textSize="@dimen/app_content_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_air_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_open"
                android:layout_width="@dimen/dialog_air_width"
                android:layout_height="@dimen/dialog_air_height"
                android:background="@drawable/shape_box_white"
                android:gravity="center"
                android:text="开"
                android:textColor="@color/app_content_color"
                android:textSize="@dimen/app_content_size" />

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="@dimen/dialog_air_width"
                android:layout_height="@dimen/dialog_air_height"
                android:background="@drawable/shape_box_white"
                android:gravity="center"
                android:text="关"
                android:textColor="@color/app_content_color"
                android:textSize="@dimen/app_content_size" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>