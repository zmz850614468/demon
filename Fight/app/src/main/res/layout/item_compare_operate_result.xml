<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:id="@+id/layout_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_do"
            android:background="@drawable/shape_box_white"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:text="石油"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pos_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="盈/次:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/tv_neg_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="亏/次:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/tv_operate_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="总/次:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:visibility="gone">


                <!--                <TextView-->
                <!--                    android:id="@+id/tv_follow_count"-->
                <!--                    android:layout_width="0dp"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:layout_weight="3"-->
                <!--                    android:gravity="center_vertical"-->
                <!--                    android:text="跟随/次:"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    android:textSize="@dimen/title_size" />-->

                <TextView
                    android:id="@+id/tv_bad_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="糟糕/次:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/layout_result"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_box_red"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_bad_percent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="糟糕占比:"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/tv_percent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="胜率:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/tv_operate_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="结果:"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_size" />

                <!--                <TextView-->
                <!--                    android:id="@+id/tv_total_result"-->
                <!--                    android:layout_width="0dp"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:layout_weight="2"-->
                <!--                    android:gravity="center_vertical"-->
                <!--                    android:text="总盈亏:"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="@dimen/title_size" />-->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>