            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_4"
                android:gravity="center"
                android:text="执行占比"
                android:textSize="@dimen/title_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_1"
                android:gravity="center"
                android:text="好"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/tv_good_times"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_2"
                android:gravity="center"
                android:text="14"
                android:textColor="@color/deepRed"
                android:textSize="@dimen/content_size" />

            <TextView
                android:id="@+id/tv_good_result"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_3"
                android:gravity="center"
                android:text="2600"
                android:textColor="@color/deepRed"
                android:textSize="@dimen/content_size" />

            <TextView
                android:id="@+id/tv_good_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_4"
                android:gravity="center"
                android:text="50.0%"
                android:textColor="@color/deepRed"
                android:textSize="@dimen/content_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_1"
                android:gravity="center"
                android:text="坏"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/tv_bad_times"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_2"
                android:gravity="center"
                android:text="14"
                android:textColor="@color/deepGreen"
                android:textSize="@dimen/content_size" />

            <TextView
                android:id="@+id/tv_bad_result"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_3"
                android:gravity="center"
                android:text="2600"
                android:textColor="@color/deepGreen"
                android:textSize="@dimen/content_size" />

            <TextView
                android:id="@+id/tv_bad_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_4"
                android:gravity="center"
                android:text="50.0%"
                android:textColor="@color/deepGreen"
                android:textSize="@dimen/content_size" />
        </LinearLayout>

